<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Semi-transparent shadow color -->
            <corners android:radius="15dp" /> <!-- Same corner radius as the rectangle -->
        </shape>
    </item>

    <!-- Main Shape Layer -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp" > <!-- Offset the shape to create the shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="@color/input_field" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>
