<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_option"
    android:elevation="30dp"

    android:layout_marginBottom="30dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fotoProduk"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logonya"/>
    <TextView
        android:id="@+id/namaproduct1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsbold"

        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:text="Dekorasi1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/kategoriproduct1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"

            android:textSize="15sp"
            android:text="Dekorasi" />
        <TextView
            android:id="@+id/garis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp"

            android:text="  |  " />
        <TextView
            android:id="@+id/stokproduct1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"

            android:textSize="15sp"
            android:paddingTop="5dp"

            android:text="Stok: 1" />

    </LinearLayout>
    <TextView
        android:id="@+id/hargaproduct1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:fontFamily="@font/poppinssemibold"

        android:text="Rp100.000" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button" />


</LinearLayout>