<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_book"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoProduk"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logonya" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tanggalBook"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmedium"
                android:paddingTop="5dp"
                android:text="9 Januari 2024" />
            <TextView
                android:id="@+id/namaproduct1"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:textSize="27sp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:text="Semen1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/kategoriproduct1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="15sp"
                    android:text="Semen" />
                <TextView
                    android:id="@+id/garis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    android:text="  |  " />
                <TextView
                    android:id="@+id/banyakbook1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Qty: " />
                <TextView
                    android:id="@+id/banyakbook2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="188" />
            </LinearLayout>
            <TextView
                android:id="@+id/hargaproduct1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinssemibold"
                android:paddingTop="5dp"
                android:text="Rp100.000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>