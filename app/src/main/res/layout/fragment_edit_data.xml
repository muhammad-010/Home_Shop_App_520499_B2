<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".crud.EditDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logonya" />
    </LinearLayout>
    <!--    back-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            />
    </LinearLayout>
    <!--isi-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <!--judul-->
        <TextView
            android:id="@+id/tv_edit_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Edit Produk"/>
        <!--        card-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_auth"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:paddingBottom="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="30dp">

                <!-- ImageView to display the selected image -->
                <ImageView
                    android:id="@+id/imageUploadImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:background="@android:color/darker_gray" />

                <!-- TextView to display the file name -->
                <TextView
                    android:id="@+id/filenameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File name will appear here"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Button to pick an image -->
                <Button
                    android:id="@+id/buttonPickImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick Image"
                    android:layout_marginBottom="16dp" />
                <TextView
                    android:id="@+id/tv_labelnamaproduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinsmedium"

                    android:text="Nama Produk"/>
                <EditText
                    android:id="@+id/et_namaProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="13dp"
                    android:background="@drawable/rounded_input"
                    android:inputType="text"
                    />

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsmedium"

                    android:text="Kategori"/>
                <RadioGroup
                    android:id="@+id/radioGroupkategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radio_dekorasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:buttonTint="@color/black"
                        android:text="Semen"/>
                    <RadioButton
                        android:id="@+id/radio_Peralatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:buttonTint="@color/black"
                        android:text="Besi"/>
                    <RadioButton
                        android:id="@+id/radio_lainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Lainnya"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinsmedium"

                    android:text="Harga"/>
                <EditText
                    android:id="@+id/et_harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="13dp"
                    android:background="@drawable/rounded_input"
                    android:inputType="number"
                    />

                <TextView
                    android:id="@+id/tv_stok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinsmedium"

                    android:text="Stok"/>
                <EditText
                    android:id="@+id/et_stok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="13dp"
                    android:background="@drawable/rounded_input"
                    android:inputType="number"
                    />

                <TextView
                    android:id="@+id/tv_ket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinsmedium"

                    android:text="Keterangan"/>
                <EditText
                    android:id="@+id/et_ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="13dp"
                    android:background="@drawable/rounded_input"
                    android:inputType="text"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_button" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>